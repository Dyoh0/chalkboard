<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/CSS/grading.css" />
    <link rel="stylesheet" href="/CSS/header.css" />
    <title>Grading View</title>
  </head>
  <body>
    <header>
    <%- include('./partials/header') %>
    </header>

    <h1><%= name.fname %> <%= name.lname %>'s answers for <%= data.assignmentname %></h1>
    <p class="assignmentdesc"><%= data.assignmentdesc %></p>
    <form action="#">
      <div class="questionanswermodule">
        <% let incorrcount = 0;%>
        <% data.questions.forEach((quest, index) => { %>
        <% incorrcount++; %>
        <p class="questiontext">
            Question:
              <span class="question"><%= quest %></span>
            </p>
      
            <p class="answertext">Student Answer:
            <span class="answer"><%= stanswers[0].answers[index] %>
            </span></p>
            <p class="answerkey">Answer Key: 
            <span class="answerkeyspan"><%= data.answers[index] %></span>
            </p>
          
          <span class="rightorwrong">
            <input type="radio" id=<%=stanswers[0].answers[index]%> name="correcttype" value="correct" required />
            <label for=<%=stanswers[0].answers[index]%> class="correcttypeclass">Correct</label>

            <input type="radio" id=<%=incorrcount%> name="correcttype" value="incorrect" required />
            <label for=<%=incorrcount%> class="correcttypeclass">Incorrect</label>
          </span>
        <% }) %>
      </div>

      <div class="feedback">
        <label for="feedback">Feedback:</label>
        <textarea id="feedback" name="feedback" rows="4" cols="50"></textarea>
      </div>
      <div class="grade">
        <label for="grade">Grade:</label>
        <input type="number" id="grade" name="grade" min="0" max="100" required />
        <input type="submit" id="submit" name="submit" class="button" />
        <button type="button" class="button">Reopen</button>
      </div>
    </form>
  </body>
</html>
