<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../CSS/header.css" />
    <link rel="stylesheet" href="../CSS/createcourse.css" />
    <title>Create Course</title>
  </head>
  <body>
    <header>
    <%- include('./partials/header') %>
    </header>

    <form action="/createcourse" method="POST">
      <h1>Create Course</h1>
      <div id="coursediv">
        <label for="coursename">Course Name:</label>
        <input type="text" id="coursename" name="coursename" placeholder="Type in Course Name" required />
      </div>

      <div id="instructordiv">
        <label for="instructor">Instructor Name:</label>
        <input type="text" id="instructor" name="instructor" placeholder="Type in Instructor" />
      </div>

      <div id="coursedesc">
        <label for="coursedescription">Course Description:</label>
        <textarea
          id="coursedescription"
          name="coursedescription"
          rows="6"
          cols="80"
          placeholder="Type in Course Description"
        ></textarea>
      </div>

      <input type="submit" class="button" value="Confirm" />
    </form>
  </body>
</html>
